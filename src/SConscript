Import("env", "common", "cereal", "messaging", "visionipc")


env.Append(CPPPATH = ["/usr/src/jetson_multimedia_api/include"])
env.Append(LIBPATH = ["/usr/lib/aarch64-linux-gnu/tegra/"])

visionlibs = ["pthread", common, "realsense2", "nvbuf_utils", "v4l2", cereal, 'zmq', 'capnp', 'kj', visionipc, messaging]

env.Program("camerad", ["camerad.cc"], LIBS=visionlibs)
env.Program("encoderd", ["encoderd.cc", "nvencoder.cc", "visionbuf.cc"], LIBS=visionlibs)

